          description: Videos successfully deleted.
          content:
            application/json:
              schema:
                type: object
                properties:
                  message:
                    type: string
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string

  /course/recommend:
    post:
      operationId: recommendCourse
      summary: Recommends courses based on job family.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                job_family:
                  type: string
                number_of_courses:
                  type: integer
                  default: 5
              required:
                - job_family
      responses:
        "200":
          description: Courses recommended successfully.
          content:
            application/json:
              schema:
                type: array
                items:
                  type: object
                  properties:
                    course_name:
                      type: string
                    predicted_rating:
                      type: number
                    cosine_similarity:
                      type: number
                    combined_score:
                      type: number
                    volatility:
                      type: number

  /course/recommend/view:
    post:
      operationId: viewRecommendedCourses
      summary: View course details based on job family name.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                query:
                  type: object
                  properties:
                    job_family:
                      type: string
                      description: The name of the job family to filter courses.
                  required:
                    - job_family
      responses:
        "200":
          description: Course details fetched successfully.
          content:
            application/json:
              schema:
                type: array
                items:
                  type: object
                  properties:
                    course_name:
                      type: string
                    predicted_rating:
                      type: number
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
 
  /course/feedback:
    post:
      operationId: addCourseFeedback
      summary: Add feedback to a course by an employee.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                person_name:
                  type: string
                  description: The name of the person providing feedback.
                course_name:
                  type: string
                  description: The name of the course for which feedback is provided.
                comment:
                  type: string
                  description: The feedback comment provided by the person.
                rating:
                  type: integer
                  description: The rating provided by the person for the course, typically on a scale of 1 to 5.
                  minimum: 1
                  maximum: 5
              required:
                - person_name
                - course_name
                - comment
                - rating
      responses:
        "200":
          description: Feedback added successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  message:
                    type: string
                    example: Feedback added successfully.
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Invalid request data.
