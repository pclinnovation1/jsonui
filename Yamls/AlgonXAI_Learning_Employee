                        type: string
                      general_information.basic_information.offering_type:
                        type: string
                      general_information.offering_details.offering_start_date:
                        type: string
                      general_information.offering_details.offering_end_date:
                        type: string
                      general_information.offering_details.primary_classroom:
                        type: string
                      general_information.offering_details.language:
                        type: string
                      general_information.offering_details.facilitator_type:
                        type: string
                      general_information.offering_details.offering_coordinator:
                        type: string
                      general_information.offering_details.comments:
                        type: string
                      related_materials.attachments:
                        type: array
                        items:
