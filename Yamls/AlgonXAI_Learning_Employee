openapi: 3.1.0
info:
  title: Me Learning Management API
  description: API to manage catalog resources within an organization.
  version: 1.0.0
servers:
  - url: https://app1.fusionobjects.com
    description: Main API server for catalog resources management

paths:
  /Learning/ExternalLearning/add:
    post:
      operationId: recordExternalLearning
      summary: Records details of external learning.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                items:
                  type: array
                  items:
                    type: object
                    required:
                      - completion_details
                      - learning_item_details
                      - learners
                    properties:
                      completion_details:
                        type: object
                        properties:
                          start_date:
                            type: string
                            format: date
                          completion_date:
                            type: string
                            format: date
                          actual_effort_in_hours:
                            type: number
                          score_achieved:
                            type: number
                          context_segment:
                            type: string
                      attachments:
                        type: array
                        items:
                          type: string
                      learning_item_details:
                        type: object
                        properties:
                          title:
                            type: string
                          url:
                            type: string
                          expected_training_hours:
                            type: number
                          cost:
                            type: number
                          currency:
                            type: string
                          description:
                            type: string
                          topic:
                            type: string
                          context_segment:
                            type: string
                      learners:
                        type: object
                        properties:
                          selection_type:
                            type: string
                          select_a_person:
                            type: string
                          note_to_learners:
                            type: string
                      justification:
                        type: string
      responses:
        "200":
          description: External learning recorded successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  message:
                    type: string
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string

  /Learning/ExternalLearning/view:
    post:
      operationId: viewExternalLearning
      summary: Retrieves recorded external learning.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                query:
                  type: object
                  properties:
                    learning_item_details.title:
                      type: string
                      description: The title of the external course or learning
                    learning_item_details.topic:
                      type: string
                      description: The topic of the external course or learning
                    completion_details.start_date:
                      type: string
                      format: date
                      description: The start date of the external course or learning
                    completion_details.completion_date:
                      type: string
                      format: date
                      description: The date of completion of the external course or learning
      responses:
        "200":
          description: Successfully retrieved external learning.
          content:
            application/json:
              schema:
                type: object
                properties:
                  items:
                    type: array
                    items:
                      type: object
                      properties:
                        person_name:
                          type: string
                        start_date:
                          type: string
                          format: date
                        completion_date:
                          type: string
                          format: date
                        score_achieved:
                          type: number
                        context_segment:
                          type: string
                        attachments:
                          type: array
                          items:
                            type: string
                        learning_item_details.title:
                          type: string
                        learning_item_details.url:
                          type: string
                        learning_item_details.expected_training_hours:
                          type: number
                        learning_item_details.cost:
                          type: number
                        learning_item_details.currency:
                          type: string
                        learning_item_details.description:
                          type: string
                        learning_item_details.topic:
                          type: string
        "404":
          description: External learning records not found.
          content:
            application/json:
              schema:
                type: object
                properties:
                  message:
                    type: string

  /Learning/ExternalLearning/update:
    post:
      operationId: updateExternalLearning
      summary: Updates records of external learning based on a query.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                query:
                  type: object
                  required:
                    - title
                  properties:
                    learning_item_details.title:
                      type: string
                      description: The title of the external learning record to update.
                      example: Advanced Data Science
                update_data:
                  type: object
                  properties:
                    completion_details.start_date:
                      type: string
                      format: date
                      description: The start date of the external learning.
                      example: 2024-01-01
                    completion_details.completion_date:
                      type: string
                      format: date
                      description: The completion date of the external learning.
                      example: 2024-06-01
                    completion_details.actual_effort_in_hours:
                      type: number
                      description: The actual effort in hours spent on the external learning.
                      example: 40
                    completion_details.score_achieved:
                      type: number
                      description: The score achieved in the external learning.
                      example: 85
                    completion_details.context_segment:
                      type: string
                      description: The context segment of the external learning.
                      example: Technical Skills
                    learning_item_details.url:
                      type: string
                      description: The URL of the external learning.
                      example: https://example.com/course
                    learning_item_details.expected_training_hours:
                      type: number
                      description: The expected training hours for the external learning.
                      example: 50
                    learning_item_details.cost:
                      type: number
                      description: The cost of the external learning.
                      example: 1000
                    learning_item_details.currency:
                      type: string
                      description: The currency of the cost.
                      example: USD
                    learning_item_details.description:
                      type: string
                      description: A description of the external learning.
                      example: A comprehensive course on advanced data science techniques.
                    learning_item_details.topic:
                      type: string
                      description: The topic of the external learning.
                      example: Data Science
                    justification:
                      type: string
                      description: The justification for the external learning.
                      example: Required for project X
      responses:
        "200":
          description: External learning records updated successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  message:
                    type: string
                    example: External learning records updated successfully.
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Invalid request data.
        "404":
          description: External learning records not found.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: External learning records not found.
  
