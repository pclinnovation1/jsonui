                      type: string
                      description: The title of the related material.
                    related_materials.url:
                      type: string
                      description: The URL of the related material.
                    related_materials.type:
                      type: string
                      description: The type of the related material.
                    members.name:
                      type: string
                      description: The name of the member.
                    members.role:
                      type: string
                      description: The role of the member.
