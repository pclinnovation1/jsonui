  /certificate/generate:
    post:
      operationId: generateCertificate
      summary: Generates a certificate based on provided details.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                recipient_name:
                  type: string
                  description: The name of the recipient.
                  example: Bhupendra Verma
                course_name:
                  type: string
                  description: The name of the course.
                  example: Manual Handling
                issued_by:
                  type: string
                  description: The name of the issuer.
                  example: PCL Innovation
                completed_on:
                  type: string
                  format: date
                  description: The completion date of the course.
                  example: 2024-06-27
                actual_effort:
                  type: string
                  description: The evaluation of the actual effort.
                  example: Excellent
      responses:
        "200":
          description: Certificate generated successfully.
          content:
            application/pdf:
              schema:
                type: string
                format: binary
              examples:
                certificate:
                  summary: A generated certificate example
                  description: An example of a generated certificate in PDF format.
                  value: "base64-encoded-pdf-string"
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Invalid request data.
        "500":
          description: Server error.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Unable to generate certificate.

