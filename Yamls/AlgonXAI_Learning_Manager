  /Course/Assigned/view:
   post:
    operationId: viewCourses
    summary: Views assigned courses of an employee.
    requestBody:
      required: true
      content:
        application/json:
          schema:
            type: object
            properties:
              query:
                type: object
                properties:
                  person_name:
                    type: string
                    description: Name of the employee
                    example: "Ravi Kumar"
                required:
                  - person_name
    responses:
      "200":
        description: Successfully retrieved the courses assigned to the employee.
        content:
          application/json:
            schema:
              type: object
              properties:
                courses:
                  type: array
                  items:
                    type: object
                    properties:
                      course_title:
                        type: string
                      person_name:
                        type: string
                      course_start_date:
                        type: string
                        format: date
                      course_end_date:
                        type: string
                        format: date
      "400":
        description: Missing person_name in request body.
        content:
          application/json:
            schema:
              type: object
              properties:
                error:
                  type: string
                  example: Missing person_name in request body       
  
  /Learning/ExternalLearning/add:
    post:
      operationId: recordExternalLearning
      summary: Records details of external learning.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                items:
                  type: array
                  items:
                    type: object
                    required:
                      - completion_details
                      - learning_item_details
                      - learners
                    properties:
                      completion_details:
                        type: object
                        properties:
                          start_date:
                            type: string
                            format: date
                          completion_date:
                            type: string
                            format: date
                          actual_effort_in_hours:
                            type: number
                          score_achieved:
                            type: number
                          context_segment:
                            type: string
                      attachments:
                        type: array
                        items:
                          type: string
                      learning_item_details:
                        type: object
                        properties:
                          title:
                            type: string
                          url:
                            type: string
                          expected_training_hours:
                            type: number
                          cost:
                            type: number
                          currency:
                            type: string
                          description:
                            type: string
                          topic:
                            type: string
                          context_segment:
                            type: string
                      learners:
                        type: object
                        properties:
                          selection_type:
                            type: string
                          select_a_person:
                            type: string
                          note_to_learners:
                            type: string
                      justification:
                        type: string
      responses:
        "200":
          description: External learning recorded successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  message:
                    type: string
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string

  /Learning/ExternalLearning/view:
    post:
      operationId: viewExternalLearning
      summary: Retrieves recorded external learning.
      requestBody:
        required: true
