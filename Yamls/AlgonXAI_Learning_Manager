  /Learning/Community/update:
    post:
      operationId: updateCommunity
      summary: Updates existing community details after confirmation.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                query:
                  type: object
                  required:
                    - community_details.title
                  properties:
                    community_details.title:
                      type: string
                      description: The title of the community to update.
                      example: "Existing Community Title"
                    community_details.branding_image:
                      type: string
                      description: The branding image URL for the community.
                      example: "https://example.com/branding.jpg"
                    community_details.description:
                      type: string
                      description: The description of the community.
                      example: "This is the updated description of the community."
                    community_details.trailer:
                      type: string
                      description: The trailer URL for the community.
                      example: "https://example.com/trailer.mp4"
                    community_details.published_date:
                      type: string
                      format: date-time
                      description: The published date of the community.
                      example: "2024-01-01T00:00:00Z"
                    community_details.tags:
                      type: array
                      items:
                        type: string
                    visibility.privacy:
                      type: string
                      description: The privacy setting of the community.
                      example: "Public"
                    visibility.member_contributions:
                      type: string
                      description: The member contribution setting of the community.
                      example: "Enabled"
                update_data:
                  type: object
                  properties:
                    community_details.title:
                      type: string
                      description: The new title for the community.
                      example: "Updated Community Title"
                    community_details.branding_image:
                      type: string
                      description: The branding image URL for the community.
                      example: "https://example.com/branding.jpg"
                    community_details.description:
                      type: string
                      description: The description of the community.
                      example: "This is the updated description of the community."
                    community_details.trailer:
                      type: string
                      description: The trailer URL for the community.
                      example: "https://example.com/trailer.mp4"
                    community_details.published_date:
                      type: string
                      format: date-time
                      description: The published date of the community.
                      example: "2024-01-01T00:00:00Z"
                    community_details.tags:
                      type: array
                      items:
                        type: string
                    visibility.privacy:
                      type: string
                      description: The privacy setting of the community.
                      example: "Public"
                    visibility.member_contributions:
                      type: string
                      description: The member contribution setting of the community.
                      example: "Enabled"
                    actions.rate_learning:
                      type: boolean
                      description: Whether rating learning is enabled.
                    actions.comments:
                      type: boolean
                      description: Whether comments are enabled.
                    actions.recommend:
                      type: boolean
                      description: Whether recommending is enabled.
                    actions.report:
                      type: boolean
                      description: Whether reporting is enabled.
                    actions.add_to_journey:
                      type: boolean
                      description: Whether adding to journey is enabled.
