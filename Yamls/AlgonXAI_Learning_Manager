          description: Successfully retrieved external learning.
          content:
            application/json:
              schema:
                type: object
                properties:
                  items:
                    type: array
                    items:
                      type: object
                      properties:
                        Completion_Details:
                          type: object
                          properties:
                            Start_Date:
                              type: string
                              format: date
                            Completion_Date:
                              type: string
                              format: date
                            Actual_Effort_in_Hours:
                              type: number
                            Score_Achieved:
                              type: number
                            Context_Segment:
                              type: string
                        Attachments:
                          type: array
                          items:
                            type: string
                        Learning_Item_Details:
                          type: object
                          properties:
                            Title:
                              type: string
                            URL:
                              type: string
                            Expected_Training_Hours:
                              type: number
                            Cost:
                              type: number
                            Currency:
                              type: string
                            Description:
                              type: string
                            Topic:
                              type: string
                            Context_Segment:
                              type: string
                        Justification:
                          type: string
                        Actions:
                          type: object
                          properties:
                            Record:
                              type: boolean
        "404":
