  openapi: 3.1.0

paths:
  /performance_document_types/add:
    post:
      operationId: addPerformanceDocumentType
      summary: Add a new performance document type.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                name:
                  type: string
                  description: The name of the performance document type.
                description:
                  type: string
                  description: The description of the performance document type.
                status:
                  type: string
                  description: The status of the performance document type.
                start_date:
                  type: string
                  format: date
                  description: The start date of the performance document type.
                end_date:
                  type: string
                  format: date
                  description: The end date of the performance document type.
              required:
                - name
                - description
                - status
                - start_date
                - end_date
      responses:
        "200":
          description: Performance document type added successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  name:
                    type: string
                    description: The name of the performance document type.
                  description:
                    type: string
                    description: The description of the performance document type.
                  status:
                    type: string
                    description: The status of the performance document type.
                  start_date:
                    type: string
                    format: date-time
                  end_date:
                    type: string
                    format: date-time
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Invalid request data.

