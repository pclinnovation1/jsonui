  /eligible_employee/create:
    post:
      operationId: createEligibleEmployee
      summary: Create a new eligible employee entry.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                performance_document_name:
                  type: string
                  description: The name of the performance document.
                eligibility_profiles:
                  type: array
                  description: List of eligibility profiles.
                  items:
                    type: object
                    properties:
                      name:
                        type: string
                        description: The name of the eligibility profile.
                included_workers:
                  type: array
                  description: List of workers to be included.
                  items:
                    type: string
                excluded_workers:
                  type: array
                  description: List of workers to be excluded.
                  items:
                    type: string
                    example: "Christy Torres"
              required:
                - performance_document_name
                - eligibility_profiles
                - included_workers
                - excluded_workers
      responses:
        "200":
          description: Eligible employee entry created successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  combined_employees:
                    type: array
                    description: List of all combined employees.
                    items:
                      type: string
                  employees:
                    type: array
                    description: List of eligible employees.
                    items:
                      type: string
                  exclude:
                    type: array
                    description: List of excluded employees.
                    items:
                      type: string
                  include:
                    type: array
                    description: List of included employees.
                    items:
                      type: string
                  performance_document_name:
                    type: string
                    description: The name of the performance document.
                  profile_name:
                    type: string
                    description: The name of the eligibility profile.
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Invalid request data.

  

  /peer/assign_peers:
    post:
      operationId: assignPeers
      summary: Assign peers to an employee for performance review.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                performance_document_name:
                  type: string
                  description: The name of the performance document.
                employee_name:
                  type: string
                  description: The name of the employee who is being reviewed.
                assigned_peers:
                  type: array
                  description: List of peers to be assigned for the performance review.
                  items:
                    type: string
                name:
                  type: string
                  description: The name of the performance template.
              required:
                - performance_document_name
                - employee_name
                - assigned_peers
                - name
      responses:
        "200":
          description: Peers assigned successfully and notified.
          content:
            application/json:
              schema:
                type: object
                properties:
                  assigned_peers:
                    type: array
                    description: List of peers who have been assigned.
                    items:
                      type: string
                  employee_name:
                    type: string
                    description: The name of the employee who is being reviewed.
                  message:
                    type: string
                    description: Success message indicating peers were assigned and notified.
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Invalid request data.


  /individual_performance/assign_individual_performance:
   post:
    operationId: assignIndividualPerformanceDocument
    summary: Assign a performance document to a person.
    requestBody:
      required: true
      content:
        application/json:
          schema:
            type: object
            properties:
              person_names:
                type: string
                description: Name of the person being assigned the performance evaluation.
              performance_document_name:
                type: string
                description: Name of the performance document assigned to the person.
              name:
                type: string
                description: Name of the performance evaluation template.
            required:
              - person_names
              - performance_document_name
              - name
    responses:
      "200":
        description: Individual performance evaluation assigned successfully.
        content:
          application/json:
            schema:
              type: object
              properties:
                message:
                  type: string
                  description: Success message.
                  example: "Individual performance evaluation assigned successfully"
      "400":
        description: Invalid request data.
        content:
          application/json:
            schema:
              type: object
              properties:
                error:
                  type: string
                  description: Error message.
                  example: "Invalid request data."


  
  
                   
  
  

  

  

  
