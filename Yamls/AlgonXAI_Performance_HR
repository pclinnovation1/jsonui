  /add_competency/add:
    post:
      operationId: addCompetency
      summary: Add a new competency.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                name:
                  type: string
                  description: The name of the competency.
                description:
                  type: string
                  description: A description of the competency.
                rating_scale:
                  type: object
                  description: The rating scale for the competency.
                  properties:
                    min:
                      type: integer
                      description: The minimum rating value.
                    max:
                      type: integer
                      description: The maximum rating value.
                    descriptions:
                      type: object
                      description: The descriptions for each rating value.
                      additionalProperties:
                        type: string
              required:
                - name
                - description
                - rating_scale
      responses:
        "200":
          description: Competency added successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  name:
                    type: string
                    description: The name of the competency.
                  description:
                    type: string
                    description: A description of the competency.
                  ratings_scale:
                    type: object
                    description: The rating scale for the competency.
                    properties:
                      min:
                        type: integer
                        description: The minimum rating value.
                      max:
                        type: integer
                        description: The maximum rating value.
                      descriptions:
                        type: object
                        description: The descriptions for each rating value.
                        additionalProperties:
                          type: string
                  created_at:
                    type: string
                    format: date-time
                    description: The timestamp when the competency was created.
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Invalid request data.

  /overall_performance/create_overall_performance_template:
    post:
      operationId: createOverallPerformanceTemplate
      summary: Create a new overall performance template.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                overall_summary_and_ratings:
                  type: object
                  description: The overall summary and ratings for the employee's performance evaluation.
                  properties:
                    summary:
                      type: string
                      description: A summary of the employee's performance throughout the evaluation period.
                    employee_actual_rating:
                      type: object
                      description: Employee's actual performance rating.
                      properties:
                        rating_scale:
                          type: integer
                        rating:
                          type: integer
                        rating_description:
                          type: string
                        comments:
                          type: string
                    employee_calculated_rating:
                      type: object
                      description: Employee's calculated performance rating.
                      properties:
                        rating_scale:
                          type: integer
                        rating:
                          type: integer
                        rating_description:
                          type: string
                    manager_actual_rating:
                      type: object
                      description: Manager's actual rating for the employee.
                      properties:
                        rating_scale:
                          type: integer
                        rating:
                          type: integer
                        rating_description:
                          type: string
                        comments:
                          type: string
                    manager_calculated_rating:
                      type: object
                      description: Manager's calculated rating for the employee.
                      properties:
                        rating_scale:
                          type: integer
                        rating:
                          type: integer
                        rating_description:
                          type: string
                achievements_and_contributions:
                  type: object
                  description: Achievements and contributions made by the employee.
                  properties:
                    achievements:
                      type: array
                      description: A list of achievements.
                      items:
                        type: object
                        properties:
                          achievement_name:
                            type: string
                          description:
                            type: string
                          date:
                            type: string
                            format: date
                    contributions:
                      type: array
                      description: A list of contributions.
                      items:
                        type: object
                        properties:
                          contribution_name:
                            type: string
                          description:
                            type: string
                          date:
                            type: string
                            format: date

      responses:
        "201":
          description: Overall performance template created successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  data:
                    type: object
                    properties:
                      overall_summary_and_ratings:
                        type: object
                        properties:
                          summary:
                            type: string
                          employee_actual_rating:
                            type: object
                          employee_calculated_rating:
                            type: object
                          manager_actual_rating:
                            type: object
                          manager_calculated_rating:
                            type: object
                      achievements_and_contributions:
                        type: object
                        properties:
                          achievements:
                            type: array
                            items:
                              type: object
                              properties:
                                achievement_name:
                                  type: string
                                description:
                                  type: string
                                date:
                                  type: string
                                  format: date
                          contributions:
                            type: array
                            items:
                              type: object
                              properties:
                                contribution_name:
                                  type: string
                                description:
                                  type: string
                                date:
                                  type: string
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    description: Error message.
                    example: "Invalid request data. Please check the input format."

