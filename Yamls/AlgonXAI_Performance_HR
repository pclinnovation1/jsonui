  /check_in_templates/add:
    post:
      operationId: addCheckInTemplate
      summary: Add a new check-in template.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                template_type:
                  type: string
                  description: The type of the check-in template.
                name:
                  type: string
                  description: The name of the check-in template.
                comments:
                  type: string
                  description: Comments about the check-in template.
                status:
                  type: string
                  description: The status of the check-in template.
                from_date:
                  type: string
                  format: date-time
                  description: The start date for the check-in template.
                to_date:
                  type: string
                  format: date-time
                  description: The end date for the check-in template.
                review_period:
                  type: string
                  description: The review period for the check-in template.
                include_in_performance_document:
                  type: string
                  description: Indicates whether to include this template in the performance document.
                check_in_content:
                  type: array
                  description: A list of content areas to include in the check-in.
                  items:
                    type: string
                eligibility_profiles:
                  type: array
                  description: A list of eligibility profiles associated with the check-in template.
                  items:
                    type: string
              required:
                - template_type
                - name
                - comments
                - status
                - from_date
                - to_date
                - review_period
                - include_in_performance_document
                - check_in_content
                - eligibility_profiles
      responses:
        "200":
          description: Check-in template added successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  template_type:
                    type: string
                    description: The type of the check-in template.
                  name:
                    type: string
                    description: The name of the check-in template.
                  comments:
                    type: string
                    description: Comments about the check-in template.
                  status:
                    type: string
                    description: The status of the check-in template.
                  from_date:
                    type: object
                    properties:
                      $date:
                        type: string
                        format: date-time
                  to_date:
                    type: object
                    properties:
                      $date:
                        type: string
                        format: date-time
                  review_period:
                    type: string
                    description: The review period for the check-in template.
                  include_in_performance_document:
                    type: string
                    description: Indicates whether to include this template in the performance document.
                  check_in_content:
                    type: array
                    description: A list of content areas to include in the check-in.
                    items:
                      type: string
                  eligibility_profiles:
                    type: array
                    description: A list of eligibility profiles associated with the check-in template.
                    items:
                      type: string
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
