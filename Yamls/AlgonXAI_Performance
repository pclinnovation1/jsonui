  /my_performances/create_goal:
    post:
      operationId: createGoal
      summary: Create a new goal in a performance document.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                employee_name:
                  type: string
                  description: The name of the employee for whom the goal is being created.
                  example: "John Doe"
                performance_document_name:
                  type: string
                  description: The name of the performance document.
                  example: "Performance Document mid year 1"
                name:
                  type: string
                  description: The name of the performance evaluation template.
                  example: "Mid-Year Performance Evaluation Template"
              required:
                - employee_name
                - performance_document_name
                - name
      responses:
        "200":
          description: Goal created successfully in the performance document.
          content:
            application/json:
              schema:
                type: object
                properties:
                  person_name:
                    type: string
                    description: The name of the employee.
                    example: "John Doe"
                  performance_document_name:
                    type: string
                    description: The name of the performance document.
                    example: "Performance Document mid year 1"
                  goals:
                    type: array
                    description: List of goals.
                    items:
                      type: string
                  description:
                    type: string
                    description: Description of the performance evaluation template.
                    example: "This template is used for the mid-year performance evaluation, focusing on key areas such as leadership, communication, and feedback collection."
                  competencies:
                    type: array
                    description: List of competencies included in the performance evaluation template.
                    items:
                      type: object
                      properties:
                        _id:
                          type: string
                          example: "66ba124251ae6945ce61d1c8"
                        name:
                          type: string
                          example: "Problem Solving"
                        description:
                          type: string
                          example: "Ability to analyze issues, identify solutions, and implement effective action plans."
                        ratingScale:
                          type: object
                          properties:
                            min:
                              type: integer
                              example: 1
                            max:
                              type: integer
                              example: 5
                            descriptions:
                              type: object
                              additionalProperties:
                                type: string
                        created_at:
                          type: string
                          format: date-time
                          example: "2024-08-12 19:16:42"
                        employee_rating:
                          type: string
                          nullable: true
                          example: null
                        manager_rating:
                          type: string
                          nullable: true
                          example: null
                  feedbacks:
                    type: array
                    description: List of feedback templates included in the performance document.
                    items:
                      type: object
                      properties:
                        _id:
                          type: string
                          example: "66ba099a7163b9e1dcf6681b"
                        name:
                          type: string
                          example: "Mid-Year Review Template"
                        comments:
                          type: string
                          example: "This template is used for conducting the mid-year performance review, including self-assessment and manager feedback."
                        status:
                          type: string
                          example: "Active"
                        template_type:
                          type: string
                          example: "Performance Review"
                        include_in_performance_document:
                          type: string
                          example: "Yes"
                        questionnaire_name:
                          type: string
                          example: "Employee Engagement Survey Q1 2024"
                        questions:
                          type: array
                          items:
                            type: object
                            properties:
                              question_name:
                                type: string
                                example: "Career Growth Opportunities"
                              question_description:
                                type: string
                                example: "How satisfied are you with the career growth opportunities provided by the company?"
                  checkins:
                    type: array
                    description: List of check-in templates included in the performance document.
                    items:
                      type: object
                      properties:
                        _id:
                          type: string
                          example: "66ba0d587163b9e1dcf6681c"
                        template_type:
                          type: string
                          example: "Annual Review"
                        name:
                          type: string
                          example: "2023 Annual Performance Review Template"
                        comments:
                          type: string
                          example: "This template is used for conducting the 2023 annual performance review, including self-assessment, peer reviews, and manager evaluations."
                        status:
                          type: string
                          example: "Active"
                        from_date:
                          type: string
                          format: date-time
                          example: "2024-01-01T00:00:00"
                        to_date:
                          type: string
                          format: date-time
                          example: "2025-01-01T00:00:00"
                        review_period:
                          type: string
                          example: "Mid year review"
                        include_in_performance_document:
                          type: string
                          example: "Yes"
                        check_in_content:
                          type: array
                          items:
                            type: string
                        eligibility_profiles:
                          type: array
                          items:
                            type: string
