  /feedback_templates/create:
    post:
      operationId: createFeedbackTemplate
      summary: Create a new feedback template.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                name:
                  type: string
                  description: The name of the feedback template.
                  example: "Mid-Year Review Template"
                comments:
                  type: string
                  description: Comments about the feedback template.
                  example: "This template is used for conducting the mid-year performance review, including self-assessment and manager feedback."
                status:
                  type: string
                  description: The status of the feedback template.
                  example: "Active"
                template_type:
                  type: string
                  description: The type of the feedback template.
                  example: "Performance Review"
                include_in_performance_document:
                  type: string
                  description: Indicates whether to include this template in the performance document.
                  example: "Yes"
                questionnaire_name:
                  type: string
                  description: The name of the associated questionnaire.
                  example: "Employee Engagement Survey Q1 2024"
              required:
                - name
                - comments
                - status
                - template_type
                - include_in_performance_document
                - questionnaire_name
      responses:
        "200":
          description: Feedback template created successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  name:
                    type: string
                    description: The name of the feedback template.
                    example: "Mid-Year Review Template"
                  comments:
                    type: string
                    description: Comments about the feedback template.
                    example: "This template is used for conducting the mid-year performance review, including self-assessment and manager feedback."
                  status:
                    type: string
                    description: The status of the feedback template.
                    example: "Active"
                  template_type:
                    type: string
                    description: The type of the feedback template.
                    example: "Performance Review"
                  include_in_performance_document:
                    type: string
                    description: Indicates whether to include this template in the performance document.
                    example: "Yes"
                  questionnaire_name:
                    type: string
                    description: The name of the associated questionnaire.
                    example: "Employee Engagement Survey Q1 2024"
                  questions:
                    type: array
                    description: A list of questions included in the associated questionnaire.
                    items:
                      type: object
                      properties:
                        question_name:
                          type: string
                          description: The name of the question.
                          example: "Career Growth Opportunities"
                        question_description:
                          type: string
                          description: The description of the question.
                          example: "How satisfied are you with the career growth opportunities provided by the company?"
