    post:
      operationId: createPerformanceTemplateConnection
      summary: Create a new performance template connection.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                name:
                  type: string
                  description: The name of the performance evaluation template.
