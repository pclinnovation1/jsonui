openapi: 3.1.0
info:
  title: Learning Catalog Management API
  description: API to manage learning communities within an organization.
  version: 1.0.0
servers:
  - url: https://app1.fusionobjects.com
    description: Main API server for communities management
paths:
  openapi: 3.1.0

paths:
  /performance_document_types/add:
    post:
      operationId: addPerformanceDocumentType
      summary: Add a new performance document type.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                name:
                  type: string
                  description: The name of the performance document type.
                  example: "Annual Performance Review"
                description:
                  type: string
                  description: The description of the performance document type.
                  example: "A comprehensive review document used for evaluating employee performance on an annual basis. This document includes goal setting, competency assessment, and overall performance rating."
                status:
                  type: string
                  description: The status of the performance document type.
                  example: "Active"
                start_date:
                  type: string
                  format: date
                  description: The start date of the performance document type.
                  example: "2024-07-24"
                end_date:
                  type: string
                  format: date
                  description: The end date of the performance document type.
                  example: "2050-12-31"
              required:
                - name
                - description
                - status
                - start_date
                - end_date
      responses:
        "200":
          description: Performance document type added successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  name:
                    type: string
                    description: The name of the performance document type.
                    example: "Annual Performance Review"
                  description:
                    type: string
                    description: The description of the performance document type.
                    example: "A comprehensive review document used for evaluating employee performance on an annual basis. This document includes goal setting, competency assessment, and overall performance rating."
                  status:
                    type: string
                    description: The status of the performance document type.
                    example: "Active"
                  start_date:
                    type: object
                    properties:
                      $date:
                        type: string
                        format: date-time
                        example: "2024-07-24T00:00:00.000Z"
                  end_date:
                    type: object
                    properties:
                      $date:
                        type: string
                        format: date-time
                        example: "2050-12-31T00:00:00.000Z"
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Invalid request data.

  /questionnaires/add:
    post:
      operationId: addQuestionnaire
      summary: Add a new questionnaire.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                name:
                  type: string
                  description: The name of the questionnaire.
                  example: "Employee Engagement Survey Q1 2024"
                description:
                  type: string
                  description: A description of the questionnaire.
                  example: "A survey designed to gather feedback on employee engagement and satisfaction within the organization for Q1 2024."
                questions:
                  type: array
                  description: A list of questions included in the questionnaire.
                  items:
                    type: object
                    properties:
                      question_name:
                        type: string
                        description: The name of the question.
                        example: "Career Growth Opportunities"
                      question_description:
                        type: string
                        description: The description of the question.
                        example: "How satisfied are you with the career growth opportunities provided by the company?"
              required:
                - name
                - description
                - questions
      responses:
        "200":
          description: Questionnaire added successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  name:
                    type: string
                    description: The name of the questionnaire.
                    example: "Employee Engagement Survey Q1 2024"
                  description:
                    type: string
                    description: A description of the questionnaire.
                    example: "A survey designed to gather feedback on employee engagement and satisfaction within the organization for Q1 2024."
                  questions:
                    type: array
                    description: A list of questions included in the questionnaire.
                    items:
                      type: object
                      properties:
                        question_name:
                          type: string
                          description: The name of the question.
                          example: "Career Growth Opportunities"
                        question_description:
                          type: string
