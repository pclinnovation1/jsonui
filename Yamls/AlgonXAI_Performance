  /check_in_templates/add:
    post:
      operationId: addCheckInTemplate
      summary: Add a new check-in template.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                template_type:
                  type: string
                  description: The type of the check-in template.
                  example: "Annual Review"
                name:
                  type: string
                  description: The name of the check-in template.
                  example: "2023 Annual Performance Review Template"
                comments:
                  type: string
                  description: Comments about the check-in template.
                  example: "This template is used for conducting the 2023 annual performance review, including self-assessment, peer reviews, and manager evaluations."
                status:
                  type: string
                  description: The status of the check-in template.
                  example: "Active"
                from_date:
                  type: object
                  properties:
                    $date:
                      type: string
                      format: date-time
                      description: The start date for the check-in template.
                      example: "2024-01-01T00:00:00.000Z"
                to_date:
                  type: object
                  properties:
                    $date:
                      type: string
                      format: date-time
                      description: The end date for the check-in template.
                      example: "2025-01-01T00:00:00.000Z"
                review_period:
                  type: string
                  description: The review period for the check-in template.
                  example: "Mid year review"
                include_in_performance_document:
                  type: string
                  description: Indicates whether to include this template in the performance document.
                  example: "Yes"
                check_in_content:
                  type: array
                  description: A list of content areas to include in the check-in.
                  items:
                    type: string
                    example: "Goal Progress Updates"
                eligibility_profiles:
                  type: array
                  description: A list of eligibility profiles associated with the check-in template.
                  items:
                    type: string
                    example: "Standard Eligibility 1"
              required:
                - template_type
                - name
                - comments
                - status
                - from_date
                - to_date
                - review_period
                - include_in_performance_document
                - check_in_content
                - eligibility_profiles
      responses:
        "200":
          description: Check-in template added successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  template_type:
                    type: string
                    description: The type of the check-in template.
                    example: "Annual Review"
                  name:
                    type: string
                    description: The name of the check-in template.
                    example: "2023 Annual Performance Review Template"
                  comments:
                    type: string
                    description: Comments about the check-in template.
                    example: "This template is used for conducting the 2023 annual performance review, including self-assessment, peer reviews, and manager evaluations."
                  status:
                    type: string
                    description: The status of the check-in template.
                    example: "Active"
                  from_date:
                    type: object
                    properties:
                      $date:
                        type: string
                        format: date-time
                        example: "2024-01-01T00:00:00.000Z"
                  to_date:
                    type: object
                    properties:
                      $date:
                        type: string
                        format: date-time
                        example: "2025-01-01T00:00:00.000Z"
                  review_period:
                    type: string
                    description: The review period for the check-in template.
                    example: "Mid year review"
                  include_in_performance_document:
                    type: string
                    description: Indicates whether to include this template in the performance document.
                    example: "Yes"
                  check_in_content:
                    type: array
                    description: A list of content areas to include in the check-in.
                    items:
                      type: string
                      example: "Goal Progress Updates"
                  eligibility_profiles:
                    type: array
                    description: A list of eligibility profiles associated with the check-in template.
                    items:
                      type: string
                      example: "Standard Eligibility 1"
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Invalid request data.

  /add_competency/add:
    post:
      operationId: addCompetency
      summary: Add a new competency.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                name:
                  type: string
                  description: The name of the competency.
                  example: "Problem Solving"
                description:
                  type: string
                  description: A description of the competency.
                  example: "Ability to analyze issues, identify solutions, and implement effective action plans."
                ratingScale:
                  type: object
                  description: The rating scale for the competency.
                  properties:
                    min:
                      type: integer
                      description: The minimum rating value.
                      example: 1
                    max:
                      type: integer
                      description: The maximum rating value.
                      example: 5
                    descriptions:
                      type: object
                      description: The descriptions for each rating value.
                      additionalProperties:
                        type: string
              required:
                - name
                - description
                - ratingScale
      responses:
        "200":
          description: Competency added successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  name:
                    type: string
                    description: The name of the competency.
                    example: "Problem Solving"
                  description:
                    type: string
                    description: A description of the competency.
                    example: "Ability to analyze issues, identify solutions, and implement effective action plans."
                  ratingScale:
                    type: object
                    description: The rating scale for the competency.
                    properties:
                      min:
                        type: integer
                        description: The minimum rating value.
                        example: 1
                      max:
                        type: integer
                        description: The maximum rating value.
                        example: 5
                      descriptions:
                        type: object
                        description: The descriptions for each rating value.
                        additionalProperties:
                          type: string
                  created_at:
                    type: string
                    format: date-time
                    description: The timestamp when the competency was created.
                    example: "2024-08-12 19:16:42"
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Invalid request data.

  /overall_performance/create_overall_performance_template:
    post:
      operationId: createOverallPerformanceTemplate
      summary: Create a new overall performance template.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                name:
                  type: string
                  description: The name of the performance evaluation template.
                  example: "Mid-Year Performance Evaluation Template"
                description:
                  type: string
                  description: A description of the performance evaluation template.
                  example: "This template is used for the mid-year performance evaluation, focusing on key areas such as leadership, communication, and feedback collection."
                competencies:
                  type: array
                  description: A list of competencies to be evaluated in the template.
                  items:
                    type: string
                  example: ["Problem Solving", "Teamwork and Collaboration"]
                feedbacks:
                  type: string
                  description: The feedback template associated with the performance evaluation.
                  example: "Mid-Year Review Template"
                check_ins:
                  type: string
                  description: The check-in template associated with the performance evaluation.
                  example: "2023 Annual Performance Review Template"
              required:
                - name
                - description
                - competencies
                - feedbacks
                - check_ins
      responses:
        "200":
          description: Overall performance template created successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  _id:
                    type: object
                    properties:
                      $oid:
                        type: string
                        example: "66c87aedf7ceffa6021ec9d9"
                  overall_summary_and_ratings:
                    type: object
                    properties:
                      summary:
                        type: string
                        description: A summary of the employee's overall performance.
                        example: "This section summarizes the employee's overall performance throughout the evaluation period, highlighting key areas of success and opportunities for improvement."
                      employee_actual_rating:
                        type: object
                        properties:
                          rating_scale:
                            type: integer
                            example: 5
                          rating:
                            type: integer
                            example: 0
                          rating_description:
                            type: string
                            example: ""
                          comments:
                            type: string
                            example: ""
                      employee_calculated_rating:
                        type: object
                        properties:
                          rating_scale:
                            type: integer
                            example: 5
                          rating:
                            type: integer
                            example: 0
                          rating_description:
                            type: string
                            example: ""
                      manager_actual_rating:
                        type: object
                        properties:
                          rating_scale:
                            type: integer
                            example: 5
                          rating:
                            type: integer
                            example: 0
                          rating_description:
                            type: string
                            example: ""
                          comments:
                            type: string
                            example: ""
                      manager_calculated_rating:
                        type: object
                        properties:
                          rating_scale:
                            type: integer
                            example: 5
                          rating:
                            type: integer
                            example: 0
                          rating_description:
                            type: string
                            example: ""
                      achievements_and_contributions:
                        type: object
                        properties:
                          achievements:
                            type: array
                            items:
                              type: object
                              properties:
                                achievement_name:
                                  type: string
                                  example: ""
                                description:
                                  type: string
                                  example: ""
                                date:
                                  type: string
                                  example: ""
                          contributions:
                            type: array
                            items:
                              type: object
                              properties:
                                contribution_name:
                                  type: string
                                  example: ""
                                description:
                                  type: string
                                  example: ""
                                date:
                                  type: string
                                  example: ""
                                achievement_name:
                                  type: string
                                  example: ""
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Invalid request data.

