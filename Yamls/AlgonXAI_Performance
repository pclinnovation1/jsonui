  /eligible_employee/create:
    post:
      operationId: createEligibleEmployee
      summary: Create a new eligible employee entry.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                performance_document_name:
                  type: string
                  description: The name of the performance document.
                  example: "Annual Performance Review 1"
                eligibility_profiles:
                  type: array
                  description: List of eligibility profiles.
                  items:
                    type: object
                    properties:
                      name:
                        type: string
                        description: The name of the eligibility profile.
                        example: "Custom Eligibility"
                included_workers:
                  type: array
                  description: List of workers to be included.
                  items:
                    type: string
                    example: "John Doe"
                excluded_workers:
                  type: array
                  description: List of workers to be excluded.
                  items:
                    type: string
                    example: "Christy Torres"
              required:
                - performance_document_name
                - eligibility_profiles
                - included_workers
                - excluded_workers
      responses:
        "200":
          description: Eligible employee entry created successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  _id:
                    type: string
                    example: "66cc50365bc822679b56a399"
                  combined_employees:
                    type: array
                    description: List of all combined employees.
                    items:
                      type: string
                      example: "Aman"
                  employees:
                    type: array
                    description: List of eligible employees.
                    items:
                      type: string
                      example: "Aman"
                  exclude:
                    type: array
                    description: List of excluded employees.
                    items:
                      type: string
                      example: "Christy Torres"
                  include:
                    type: array
                    description: List of included employees.
                    items:
                      type: string
                      example: "Jane Smith"
                  performance_document_name:
                    type: string
                    description: The name of the performance document.
                    example: "Annual Performance Review 1"
                  profile_name:
                    type: string
                    description: The name of the eligibility profile.
                    example: "Custom Eligibility"
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Invalid request data.

