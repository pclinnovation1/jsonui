  /goal_plan/assign-goal-plan:
   post:
    operationId: assignGoalPlan
    summary: Assign goal plans to a list of employees.
    requestBody:
      required: true
      content:
        application/json:
          schema:
            type: object
            properties:
              person_names:
                type: array
                description: A list of employees to whom the goal plan will be assigned.
                items:
                  type: string
              goal_plan_name:
                type: string
                description: The name of the goal plan to be assigned.
              review_period:
                type: string
                description: The review period of the goal plan.
              performance_document_type:
                type: string
                description: The type of performance document associated with the goal plan.
    responses:
      "200":
        description: Goal plan assignment status.
        content:
          application/json:
            schema:
              type: object
              properties:
                message:
                  type: string
                  description: Message indicating the result of the goal plan assignment.
                skipped_employees:
                  type: array
                  description: List of employees who were not assigned the goal plan and the reasons why.
                  items:
                    type: object
                    properties:
                      person_name:
                        type: string
                        description: The name of the employee who was skipped.
                      reason:
                        type: string
                        description: The reason the employee was skipped.
      "400":
        description: Invalid request data.
        content:
          application/json:
            schema:
              type: object
              properties:
                error:
                  type: string
                  example: "Invalid request data."

