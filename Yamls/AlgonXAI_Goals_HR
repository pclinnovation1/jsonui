  /eligibility/create:
    post:
      operationId: createEligibilityProfile
      summary: Create a new eligibility profile.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                eligibility_profile_definition:
                  type: object
                  properties:
                    name:
                      type: string
                      description: The name of the eligibility profile.
                    description:
                      type: string
                      description: Description of the eligibility profile.
                    assignment_to_use:
                      type: string
                      description: The assignment to use for this eligibility profile.
                    status:
                      type: string
                      description: The status of the eligibility profile (e.g., Active).
                    view_hierarchy:
                      type: string
                      description: The view hierarchy for this profile.
                    profile_type:
                      type: string
                      description: The type of profile.
                    profile_usage:
                      type: string
                      description: The usage category for this profile.
                eligibility_criteria:
                  type: object
                  properties:
                    personal:
                      type: object
                      properties:
                        gender:
                          type: string
                        disabled:
                          type: string
                        postal_code_ranges:
                          type: string
                        opted_for_medicare:
                          type: string
                        leave_of_absence:
                          type: string
                        termination_reason:
                          type: string
                        qualification:
                          type: string
                        competency:
                          type: string
                        marital_status:
                          type: string
                        religion:
                          type: string
                        home_location:
                          type: string
                        person_type:
                          type: string
                        service_areas:
                          type: string
                        uses_tobacco:
                          type: string
                    employment:
                      type: object
                      properties:
                        assignment_status:
                          type: string
                        hourly_or_salaried:
                          type: string
                        assignment_category:
                          type: string
                        grade:
                          type: string
                        job:
                          type: string
                        position:
                          type: string
                        payroll:
                          type: string
                        salary_basis:
                          type: string
                        department:
                          type: string
                        legal_entities:
                          type: string
                        performance_rating:
