openapi: 3.1.0
info:
  title: Employee Details Management API
  description: API for managing employee details.
  version: 1.0.0
servers:
  - url: https://app1.fusionobjects.com
    description: Main API server for employee details management

paths:

  /scheduler/create-process:
   post:
    operationId: addProcess
    summary: Add a new process.
    requestBody:
      required: true
      content:
        application/json:
          schema:
            type: object
            properties:
              process_name:
                type: string
                description: Name of the process.
                example: "Employee Onboarding"
              template_name:
                type: string
                description: Name of the template.
                example: "Standard Onboarding Template"
              description:
                type: string
                description: Description of the process.
                example: "This process handles the onboarding of new employees."
              submission_notes:
                type: string
                description: Notes for submission.
                example: "Please ensure all steps are completed."
              notify_me_when_this_process_ends:
                type: boolean
                description: Notify the user when this process ends.
                example: true
              population_filters:
                type: object
                description: Filters for the population.
                additionalProperties:
                  type: string
                example: {}
              process_options:
                type: object
                description: Options for the process.
                additionalProperties:
                  type: string
                example: {}
              advanced_options:
                type: object
                description: Advanced options for the process.
                additionalProperties:
                  type: string
                example: {}
    responses:
      "200":
        description: Successful response indicating the process template was added.
        content:
          application/json:
            schema:
              type: object
              properties:
                message:
                  type: string
                  description: Success message indicating the process template was added.
      "400":
        description: Invalid request data.
        content:
          application/json:
            schema:
              type: object
              properties:
                error:
                  type: string
                  description: Error message.

