  /generate_reports:
   post:
    operationId: generateReport
    summary: Generate a report on the progress of all journeys.
    requestBody:
      required: false
      content: {}
    responses:
      "200":
        description: Successful response with the report details.
        content:
          application/json:
            schema:
              type: array
              items:
                type: object
                properties:
                  journey_name:
                    type: string
                    description: The name of the journey.
                  teams:
                    type: array
                    items:
                      type: object
                      properties:
                        team_name:
                          type: string
                          description: The name of the team.
                        progress:
                          type: object
                          additionalProperties:
                            type: number
                            format: float
                            description: The progress of each team member.
                  users:
                    type: array
                    items:
                      type: object
                      properties:
                        person_name:
                          type: string
                          description: The name of the user.
                        progress:
                          type: number
                          format: float
                          description: The progress of the user.
      "400":
        description: Invalid request data.
        content:
          application/json:
            schema:
              type: object
              properties:
                error:
                  type: string
                  description: Error message.


