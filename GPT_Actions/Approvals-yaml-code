  /journey/track_progress:
    post:
      operationId: trackJourneyProgress
      summary: Track the progress of a journey for a specified person.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                person_name:
                  type: string
                  description: Name of the person
                  example: "John Doe"
      responses:
        "200":
          description: Journey progress tracked successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  journey_name:
                    type: string
                    description: The name of the journey
                    example: "Database Development"
                  progress:
                    type: object
                    description: Progress details
                    properties:
                      completed_tasks:
                        type: array
                        description: List of completed tasks
                        items:
                          type: string
                          example: "Design Database Schema"
                      pending_tasks:
                        type: array
                        description: List of pending tasks
                        items:
                          type: string
                          example: "Develop Database Backup Strategy"
                      overall_status:
                        type: string
                        description: Overall status of the journey
                        example: "In Progress"
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Missing or invalid person_name in request body.
  /journey/mark_task_completed:
    post:
      operationId: markTaskCompleted
      summary: Mark a task as completed for a specified person in a journey.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                person_name:
                  type: string
                  description: Name of the person
                  example: "John Doe"
                journey_title:
                  type: string
                  description: Title of the journey
                  example: "Advanced Data Science Journey"
                task_name:
                  type: string
                  description: Name of the task
                  example: "Introduction to Machine Learning"
      responses:
        "200":
          description: Task marked as completed successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  message:
                    type: string
                    example: Task marked as completed successfully.
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Missing or invalid person_name, journey_title, or task_name in request body.
  
  /journey/submit_feedback:
    post:
      operationId: submitFeedback
      summary: Submit feedback for a specified task in a journey.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                person_name:
                  type: string
                  description: Name of the person
                  example: "John Doe"
                journey_title:
                  type: string
                  description: Title of the journey
                  example: "Advanced Data Science Journey"
                task_name:
                  type: string
                  description: Name of the task
                  example: "Introduction to Machine Learning"
                feedback:
                  type: string
                  description: Feedback text
                  example: "Great job on completing the task!"
      responses:
        "200":
          description: Feedback submitted successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  message:
                    type: string
                    example: Feedback submitted successfully.
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Missing or invalid person_name, journey_title, task_name, or feedback in request body.

