                      type: string
                      description: The category of the journey
                      example: "Data Science"
                    description:
                      type: string
                      description: Description of the journey
                      example: "A comprehensive journey to master advanced data science concepts."
                    start_date:
                      type: string
                      format: date
                      description: Start date of the journey
                      example: "2024-01-01"
                    end_date:
                      type: string
                      format: date
                      description: End date of the journey
                      example: "2024-12-31"
                    status:
                      type: string
                      description: Status of the journey
                      example: "In Progress"
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Missing or invalid user in request body.
  
