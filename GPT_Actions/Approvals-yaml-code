openapi: 3.1.0
info:
  title: Learning Journey Management API
  description: API for managing learning journeys.
  version: 1.0.0
servers:
  - url: https://app1.fusionobjects.com
    description: Main API server for learning journey management

paths:
  /add_user_to_journey:
    post:
      operationId: addUserToJourney
      summary: Add a user to a specified learning journey.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                name:
                  type: string
                  description: The title of the learning journey.
                  example: "Advanced Data Science"
                users:
                  type: object
                  properties:
                    person_name:
                      type: string
                      description: Name of the user.
                      example: "John Doe"
                    start_date:
                      type: string
                      format: date
                      description: Start date of the journey.
                      example: "2024-01-01"
                    end_date:
                      type: string
                      format: date
                      description: End date of the journey.
                      example: "2024-12-31"
                    status:
                      type: string
                      description: Status of the journey.
                      example: "In Progress"
                    tasks_completed:
                      type: object
                      description: Details of the tasks completed by the user.
                      properties: {}  # Specify details as necessary
                    feedback:
                      type: object
                      description: Feedback for the user.
                      properties: {}  # Specify details as necessary
      responses:
        "200":
          description: User added to the journey successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  message:
                    type: string
                    example: User added to the journey successfully.
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Missing journey_title or user in request body.

  /journey/create:
    post:
      operationId: createJourney
      summary: Create a new learning journey.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                name:
                  type: string
                  description: Journey name
                  example: "Advanced Data Science Journey"
                category:
                  type: string
                  description: Category of the journey
                  example: "Data Science"
                description:
                  type: string
                  description: Description of the journey
                  example: "A comprehensive journey to master advanced data science concepts."
                tasks:
                  type: array
                  description: Array of tasks in the journey
                  items:
                    type: object
                    properties:
                      title:
                        type: string
                        description: Task title
                        example: "Introduction to Machine Learning"
                users:
                  type: array
                  description: Array of users associated with the journey
                  items:
                    type: object
                    additionalProperties: true
                teams:
                  type: array
                  description: Array of teams associated with the journey
                  items:
                    type: object
                    additionalProperties: true
      responses:
        "200":
          description: Journey created successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  message:
                    type: string
                    example: Journey created successfully.
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Invalid request data.

  /journey/add_user_to_team:
    post:
      operationId: addUserToTeamInJourney
      summary: Add a user to a team in a specified learning journey.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                journey_title:
                  type: string
                  description: Title of the journey
                  example: "Advanced Data Science Journey"
                team_name:
                  type: string
                  description: Name of the team
                  example: "Data Science Team"
                member_name:
                  type: string
                  description: Name of the member
                  example: "John Doe"
                task_status:
                  type: object
                  description: Object containing task names as keys and their status as values
                  additionalProperties:
                    type: string
                  example: 
                    "Introduction to Machine Learning": "Completed"
                    "Advanced Data Analysis Techniques": "In Progress"
      responses:
        "200":
          description: User added to the team in the journey successfully.
          content:
            application/json:
              schema:
                type: object
                properties:
                  message:
                    type: string
                    example: User added to the team in the journey successfully.
        "400":
          description: Invalid request data.
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Missing journey_title, team_name, or member_name in request body.
  
  /journey/view_user_journeys:
    post:
      operationId: viewJourneysOfUser
      summary: View all journeys of a specified user.
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                query:
                  type: object
      responses:
        "200":
          description: List of journeys for the specified user.
          content:
            application/json:
              schema:
                  type: object
                  properties:
                    journey_title:
                      type: string
